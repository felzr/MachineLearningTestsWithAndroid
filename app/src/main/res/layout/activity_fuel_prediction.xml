<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FuelPredictionActivity">
    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_margin="10dp"
            android:id="@+id/text_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="result"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <EditText
            android:id="@+id/edt_cylinders"
            android:layout_margin="10dp"
            android:inputType="number"
            android:hint="Cylinders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
        <EditText
            android:id="@+id/edt_displacement"
            android:layout_margin="10dp"
            android:inputType="number"
            android:hint="Displacement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
        <EditText
            android:id="@+id/edt_horsepower"
            android:layout_margin="10dp"
            android:inputType="number"
            android:hint="Horsepower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
        <EditText
            android:id="@+id/edt_weight"
            android:layout_margin="10dp"
            android:inputType="number"
            android:hint="Weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
        <EditText
            android:id="@+id/edt_accelaration"
            android:layout_margin="10dp"
            android:inputType="number"
            android:hint="Acceleration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
        <EditText
            android:id="@+id/edt_model_year"
            android:layout_margin="10dp"
            android:inputType="number"
            android:hint="Model Year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
        <Spinner
            android:spinnerMode="dropdown"
            android:id="@+id/spn_origin"
            android:layout_margin="10dp"
            android:inputType="number"
            android:hint="Origin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>
        <Button
            android:layout_margin="10dp"
            android:text="predict"
            android:id="@+id/btn_predict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Button>

    </LinearLayout>
</ScrollView>